<h3>Trainer <%=@trainer.name%></h3>
<% if Trainer.find(params[:id]) == current_trainer %>
    <%= button_to "Play God!", new_trainer_pokemon_path(current_trainer), :class => "button medium", :method => :patch %>
    <%end%>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h3><%=@trainer.name%>'s Pokemon</h3>
<% @pokemons.each do |p| %>
	<p><%= p.name %> </p>
	<p>Level: <%=p.level%></p>
	<p>Health: <%=p.health%></p>
	<%= button_to "Damage!", damage_path(@trainer, p), :class => "button medium", :method => :patch %>

	<% end %>


